.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
}

.header {
  position: relative;
  height: 300rpx;
  overflow: hidden;
}

.bg-image {
  width: 100%;
  height: 100%;
  filter: brightness(0.7);
}

.user-info {
  position: absolute;
  left: 40rpx;
  bottom: 40rpx;
  display: flex;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid #fff;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.1);
}

.user-details {
  margin-left: 20rpx;
}

.nickname {
  font-size: 36rpx;
  color: #fff;
  font-weight: bold;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.3);
}

.user-id {
  font-size: 24rpx;
  color: rgba(255,255,255,0.8);
  margin-top: 8rpx;
}

.content {
  flex: 1;
  padding: 30rpx;
}

.wallet-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  padding: 30rpx;
  color: #fff;
  box-shadow: 0 8rpx 20rpx rgba(102,126,234,0.3);
  margin-bottom: 40rpx;
}

.wallet-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.wallet-title {
  font-size: 28rpx;
}

.wallet-balance {
  font-size: 48rpx;
  font-weight: bold;
}

.wallet-actions {
  display: flex;
  justify-content: space-between;
}

.wallet-btn {
  flex: 1;
  margin: 0 10rpx;
  height: 70rpx;
  font-size: 28rpx;
  border-radius: 35rpx;
  border: none;
  display: flex;
  justify-content: center;
  align-items: center;
}

.wallet-btn.recharge {
  background-color: rgba(255,255,255,0.2);
  color: #fff;
}

.wallet-btn.withdraw {
  background-color: #fff;
  color: #667eea;
}

.btn-text {
  text-align: center;
}

.menu-list {
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon-wrapper {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background-color: #f0f0f0;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 20rpx;
}

.menu-icon {
  width: 40rpx;
  height: 40rpx;
}

.menu-text {
  flex: 1;
  font-size: 32rpx;
  color: #333;
}

.arrow-icon {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.3;
}

.footer {
  padding: 40rpx 30rpx;
}

.logout-btn {
  width: 100%;
  height: 88rpx;
  background-color: #ff4d4f;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  border: none;
  box-shadow: 0 6rpx 16rpx rgba(255,77,79,0.3);
  display: flex;
  justify-content: center;
  align-items: center;
}

.logout-btn::after {
  border: none;
}